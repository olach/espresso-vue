					</subzones>
				</zone>
				<zone name="embedded.language-root.css.scss">
					<starts-with>
						<expression>(?&lt;=>)</expression>
					</starts-with>
					<ends-with>
						<expression>(?=&lt;/(?i:style)>)</expression>
					</ends-with>
					<subzones>
						<include syntax="language-root.css.scss"/>
					</subzones>
				</zone>
			</subzones>
		</zone>
		
